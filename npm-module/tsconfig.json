{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true
  }
}
