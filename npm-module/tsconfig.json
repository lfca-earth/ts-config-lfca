{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "../../../",
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../../../dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "exclude": ["../../../node_modules"],
  "include": ["../../../**/*.ts"]
}
